<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dtvm="clr-namespace: Drakon.App.ViewModels.DesignTime; assembly=Drakon.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" 
        d:DataContext="{x:Static dtvm:StaticViewModels.MainWindowVm}"
        x:Class="Drakon.App.MainWindow"
        Title="{Binding Title}">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_New" Command="{Binding FileCreateCommand}"/>
        <MenuItem Header="_Open" Command="{Binding FileOpenCommand}"/>
        <MenuItem Header="_Save" Command="{Binding FileSaveCommand}"/>
        <Separator/>
        <MenuItem Header="_Exit" Command="{Binding ExitCommand}"/>
      </MenuItem>
    </Menu>
  </DockPanel>
</Window>
